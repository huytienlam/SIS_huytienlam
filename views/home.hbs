<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Danh sách sinh viên</title>
</head>
<body>
    <div class="container">
        <h1>Danh sách sinh viên</h1>

        <form class="search-form" action="/search" method="get">
            <input class="input-default" type="text" name="query" placeholder="Nhập MSSV hoặc Họ Tên">
            <select class="input-default" name="faculty">
                <option value="">-- Chọn Khoa --</option>
                {{#each faculties}}
                    <option value="{{this}}" {{#if (eq this ../selectedFaculty)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
            <button class="search-button" type="submit">Tìm kiếm</button>
        </form>

        <table border="1">
            <tr>
                <th>MSSV</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Giới tính</th>
                <th>Khoa</th>
                <th>Khóa</th>
                <th>Chương trình</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
            {{#each students}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{dob}}</td>
                <td>{{gender}}</td>
                <td>{{faculty}}</td>
                <td>{{course}}</td>
                <td>{{program}}</td>
                <td>{{address}}</td>
                <td>{{email}}</td>
                <td>{{phone}}</td>
                <td>{{status}}</td>
                <td>
                    <div class="update-delete-container">
                        <a href="/update/{{id}}">
                            <button class="update-delete-button">Sửa</button>
                        </a>
                        <form action="/delete/{{id}}" method="post" style="display:inline;">
                            <button class="update-delete-button" type="submit">Xoá</button>
                        </form>
                    </div>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</body>
</html>
